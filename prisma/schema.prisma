// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model MixData {
  id   String @id @default(cuid())
  name String
  data String
}

model SourceSong {
  id       String        @id @default(cuid())
  slug     String
  title    String
  artist   String
  year     String
  studio   String
  location String
  bpm      Int
  start    Int
  end      Int
  tracks   SourceTrack[]
}

model SourceTrack {
  id           String      @id @default(cuid())
  name         String
  path         String
  SourceSong   SourceSong? @relation(fields: [sourceSongId], references: [id])
  sourceSongId String?
}
